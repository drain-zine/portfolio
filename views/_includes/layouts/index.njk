{% extends "layouts/root.njk" %}
{% set _name = "home" %}



{% block content %}

<script type="text/javascript" src="/scripts/marquee.js"></script>
<div class="marquee-wrapper overflow-hidden">
	{# <div class="marquee vertical bottom absolute right-border ml-auto w-1 overflow-hidden h-125"  data-gap='50' data-duplicated='false' data-direction='up'>"{{ scrollingText | safe }}"</div> #}
	<div class="marquee vertical top absolute left-border ml-auto w-1 overflow-hidden h-125" data-gap='50' data-duplicated='false' data-direction='down'>"{{ scrollingText | safe }}"</div>
	<div class="marquee vertical top absolute right-border ml-auto w-1 overflow-hidden h-125" data-gap='50' data-duplicated='false' data-direction='down'>"{{ scrollingText | safe }}"</div>
</div>	
	<main>

		<!-- padding row -->
		<div class="flex-grid padding">
			<div class="col pt-20"><div class="sub-col-right">
				
			</div></div>
			<div class="col pt-20"></div>
			<div class="col pt-20"></div>
			<div class="col pt-20 col-right"></div>
		</div>
				
		<!-- row 1-->
		<div class="flex-grid">
			<div class="marquee left w-100 absolute fs-09" data-gap='50' data-duplicated='false' data-direction='right'>"{{ scrollingText | safe }}"</div>
			<div class="col">		
			</div>

			<div class="col">
				<div class="img-wrapper translateX-50">
					<img class = "mt-1 mb-1"src="/{{homeImage}}" width=100%/>
				</div>	
			</div>
			
			<div class="col border-transparent img-overlap">
			</div>

			<div class="col wrap col-right">

			</div>
			
		</div>
		<div class="flex-grid">
			
			
			<div class="col">
				
			</div>

			<div class="col">
			</div>
		
			<div class="col img-overlap">
			</div>

			<div class="col wrap col-right">

			</div>
			<div class="marquee fs-09 absolute translate-height-up w-100"  data-gap='50' data-duplicated='false' data-direction='left'>"{{ scrollingText | safe }}"</div>

		</div>


		<!-- padding row -->
		<div class="flex-grid padding">
			<div class="col pt-20"></div>
			<div class="col pt-20"></div>
			<div class="col pt-20">
				
			</div>
			<div class="col pt-20 col-right"></div>
		</div>

	</main>
<script>
	console.log($('.marquee.vertical.top').height());
	$('.marquee.vertical.bottom').height($('.marquee.vertical.top').height());

	$('.marquee').marquee({
		//duration in milliseconds of the marquee
		duration: 5000,
		//gap in pixels between the tickers
		gap: 5,
		//time in milliseconds before the marquee will start animating
		delayBeforeStart: 0,
		//'left' or 'right'
		direction: "left", // get direction
		//true or false - should the marquee be duplicated to show an effect of continues flow
		duplicated: false
	}); 
</script>

{% endblock %}