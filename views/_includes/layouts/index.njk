{% extends "layouts/root.njk" %}
{% set _name = "home" %}

{% block content %}
<div class="marquee-wrapper">
	<marquee behavior="scroll" direction="up" class="vertical top absolute right-border ml-auto">"{{ scrollingText | safe }}"</marquee>
	<marquee behavior="scroll" direction="down" class="vertical top absolute left-border ml-auto">"{{ scrollingText | safe }}"</marquee>
</div>	
	<main>

		<!-- padding row -->
		<div class="flex-grid padding">
			<div class="col pt-20"><div class="sub-col-right">
				
			</div></div>
			<div class="col pt-20"></div>
			<div class="col pt-20"></div>
			<div class="col pt-20 col-right"></div>
		</div>
				
		<!-- row 1-->
		<div class="flex-grid">
			<marquee behavior="scroll" direction="left" class="absolute fs-09">"{{ scrollingText | safe }}"</marquee>
			<div class="col">		
			</div>

			<div class="col">
				<div class="img-wrapper translateX-50">
					<img class = "mt-1 mb-1"src="/{{homeImage}}" width=100%/>
				</div>	
			</div>
			
			<div class="col border-transparent img-overlap">
			</div>

			<div class="col wrap col-right">

			</div>
			
		</div>
		<div class="flex-grid">
			
			
			<div class="col">
				
			</div>

			<div class="col">
			</div>
		
			<div class="col img-overlap">
			</div>

			<div class="col wrap col-right">

			</div>
			<marquee behavior="scroll" direction="right" class="fs-09 absolute translate-height-up">"{{ scrollingText | safe }}"</marquee>

		</div>


		<!-- padding row -->
		<div class="flex-grid padding">
			<div class="col pt-20"></div>
			<div class="col pt-20"></div>
			<div class="col pt-20">
				
			</div>
			<div class="col pt-20 col-right"></div>
		</div>

	</main>

{% endblock %}